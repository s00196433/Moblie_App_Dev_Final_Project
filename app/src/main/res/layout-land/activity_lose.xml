<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="zoe.itsligo.Moblie_App_Dev_Final_Project.loseActivity">

    <TextView
        android:id="@+id/ScoreTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="245dp"
        android:layout_marginTop="91dp"
        android:text="TextView"
        android:textSize="20dp"
        android:textColor="@color/Black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GameOverLabel" />

    <Button
        android:id="@+id/HiScoreButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="98dp"
        android:layout_marginBottom="121dp"
        android:onClick="doHighScore"
        android:text="See High Score"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/PlayAgainButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="65dp"
        android:onClick="doPlayAgain"
        android:text="Play Again"
        app:layout_constraintBottom_toTopOf="@+id/HiScoreButton"
        app:layout_constraintStart_toStartOf="@+id/HiScoreButton" />

    <TextView
        android:id="@+id/GameOverLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="117dp"
        android:layout_marginEnd="17dp"
        android:text="GAME OVER..."
        android:textColor="@color/Red"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/ScoreTv"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>